    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feed Index</title>
    <style>
       
    body {
        background-image: url('../../Content/Payment3 Img.jpg');
        background-size:cover;
    }
   
    table {
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
